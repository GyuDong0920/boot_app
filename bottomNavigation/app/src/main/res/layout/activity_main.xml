<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/lay1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="70dp">

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lay1"
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="570dp">

        </LinearLayout>
        <ImageView
            android:id="@+id/btnHome"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnImage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_home_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/btnImage"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toTopOf="@id/btnHome"
            app:layout_constraintEnd_toStartOf="@id/btnGPS"
            app:layout_constraintStart_toEndOf="@id/btnHome"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_image_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/btnGPS"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toTopOf="@id/btnHome"
            app:layout_constraintEnd_toStartOf="@id/btnChat"
            app:layout_constraintStart_toEndOf="@id/btnImage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_add_location_alt_24"

            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/btnChat"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toTopOf="@id/btnHome"
            app:layout_constraintEnd_toStartOf="@id/btnInfo"
            app:layout_constraintStart_toEndOf="@id/btnGPS"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_chat_bubble_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toTopOf="@id/btnHome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnChat"
            android:id="@+id/btnInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_person_add_alt_1_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text="홈"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/btnHome"
            app:layout_constraintStart_toStartOf="@id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:text="이미지"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btnImage"
        app:layout_constraintStart_toStartOf="@id/btnImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:text="위치"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btnGPS"
        app:layout_constraintStart_toStartOf="@id/btnGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:text="메세지"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btnChat"
        app:layout_constraintStart_toStartOf="@id/btnChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:text="내 정보"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btnInfo"
        app:layout_constraintStart_toStartOf="@id/btnInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>